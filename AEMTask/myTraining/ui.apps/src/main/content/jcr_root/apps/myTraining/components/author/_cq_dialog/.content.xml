<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <authorName
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Enter author name"
                        fieldLabel="Author Name"
                        name="./authorName"
                        required="{Boolean}true"/>
                    <authorBio
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                        fieldDescription="Enter author bio"
                        fieldLabel="Author Bio"
                        name="./authorBio"
                        required="{Boolean}true"/>
                    <dob
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                        displayFormat="DD MMMM,YYYY"
                        fieldDescription="Select the author dob"
                        fieldLabel="Date Of Birth"
                        name="./dob"
                        required="{Boolean}true"
                        storedValue="DD MMMM,YYYY"/>
                    <authorNode
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        description="Enter the authors website URL"
                        fieldLabel="Author Website"
                        name="./authorWebsite"/>
                    <authorQuotes
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Author Quotes"
                            name="./authorQuotes"/>
                    </authorQuotes>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
